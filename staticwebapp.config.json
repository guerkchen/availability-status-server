{
  "routes": [
    {
      "route": "/api/status",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/updateStatus",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/light",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/lightauth",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/lightauth/callback",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "serve": "/api",
      "statusCode": 404
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ]
}
